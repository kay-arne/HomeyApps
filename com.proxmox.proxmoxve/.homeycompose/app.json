{
  "id": "com.proxmox.proxmoxve",
  "version": "1.0.5",
  "compatibility": ">=12.3.0",
  "sdk": 3,
  "brandColor": "#D76300",
  "platforms": [
    "local"
  ],
  "name": {
    "en": "Proxmox VE",
    "nl": "Proxmox VE"
  },
  "description": {
    "en": "Control and monitor your Proxmox VE cluster.",
    "nl": "Beheer en monitor je Proxmox VE cluster."
  },
  "languages": [
    "en",
    "nl"
  ],
  "category": "tools",
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Kay-Arne van Dalfsen",
    "email": "kay-arne@kay-arne.eu"
  },
  "drivers": [
    {
      "id": "proxmox-cluster",
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "connection_setup"
          },
          "options": {
            "showLoader": false
          }
        },
        {
          "id": "connection_setup",
          "template": "connection_setup",
          "navigation": {
            "next": "device_naming",
            "previous": "list_devices"
          }
        },
        {
          "id": "device_naming",
          "template": "device_naming",
          "navigation": {
            "next": "add_devices",
            "previous": "connection_setup"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ]
}